<launch>
	<arg name="messsage_rate" default="50"/> <!-- in Hz -->
	<arg name="ID_0" default="0"/>
	<arg name="ID_1" default="1"/>
		
	<node name="joy_node_$(arg ID_0)" pkg="joy" type="joy_node" output="screen">
		<remap from="joy" to="joy_$(arg ID_0)"/>
		<param name="dev" value="/dev/input/js$(arg ID_0)"/>
		<param name="deadzone" value="0.15"/>
		<param name="coalesce_interval" value="$(eval 1.0 / arg('messsage_rate'))"/> <!-- in sec -->
		<param name="autorepeat_rate" value="$(arg messsage_rate)"/>
	</node>
	<node name="joy_node_$(arg ID_1)" pkg="joy" type="joy_node" output="screen">
		<remap from="joy" to="joy_$(arg ID_1)"/>
		<param name="dev" value="/dev/input/js$(arg ID_1)"/>
		<param name="deadzone" value="0.15"/>
		<param name="coalesce_interval" value="$(eval 1.0 / arg('messsage_rate'))"/> <!-- in sec -->
		<param name="autorepeat_rate" value="$(arg messsage_rate)"/>
	</node>
	<node name="joystick_steering_node_$(arg ID_0)" pkg="joy_tank_steering" type="multi_joy_steering.py" output="screen">
		<param name="joy_message_topic_name" value="joy_$(arg ID_0)"/>
		<param name="start_steering_mode" value="0"/> <!-- 'ROVER_STEERING' = 0 or 'MANIPULATOR_STEERING' = 1 -->
		<param name="tank_steering_mode" value="False"/>
		<param name="ID" value="$(arg ID_0)"/>
	</node>
	<node name="joystick_steering_node_$(arg ID_1)" pkg="joy_tank_steering" type="multi_joy_steering.py" output="screen">
		<param name="joy_message_topic_name" value="joy_$(arg ID_1)"/>
		<param name="start_steering_mode" value="1"/> <!-- 'ROVER_STEERING' = 0 or 'MANIPULATOR_STEERING' = 1 -->
		<param name="tank_steering_mode" value="False"/>
		<param name="ID" value="$(arg ID_1)"/>
	</node>
</launch>
