<launch>
    <arg name="message_rate" default="10.0" />
    <arg name="filter_size" default="1" />
    <arg name="fake_camera_frame" default="camera_frame" />
    <arg name="base_frame" default="base_link" />
    <arg name="aruco_size" default="0.05" />
    <arg name="aruco_size_override" default="13-14: 0.032, 31-32: 0.0391, 33: 0.0397" />

    <arg name="rviz" default="true" />
    <arg name="gazebo" default="false" />
    <arg name="test" default="true" />

    <!-- Package enable aruco detection from up to 6 cameras streams -->
    <arg name="camera_id_0" default="0" />
    <arg name="camera_id_1" default="" />
    <arg name="camera_id_2" default="" />
    <arg name="camera_id_3" default="" />
    <arg name="camera_id_4" default="" />
    <arg name="camera_id_5" default="" />

    <!-- Each aruco_detect node is run only for configured stream -->
    <include file="$(find panel_visualization)/launch/aruco_detection.launch">
        <arg name="camera_name" default="/web_camera_$(arg camera_id_0)/webcam" />
        <arg name="aruco_size_override" default="$(arg aruco_size_override)" />
    </include>
    <include file="$(find panel_visualization)/launch/web_cameras.launch">
        <arg name="camera_id" default="$(arg camera_id_0)" />
    </include>

    <include if="$(eval arg('camera_id_1') != '')"
        file="$(find panel_visualization)/launch/aruco_detection.launch">
        <arg name="camera_name" default="/web_camera_$(arg camera_id_1)/webcam" />
        <arg name="aruco_size_override" default="$(arg aruco_size_override)" />
    </include>
    <include if="$(eval arg('camera_id_1') != '')"
        file="$(find panel_visualization)/launch/web_cameras.launch">
        <arg name="camera_id" default="$(arg camera_id_1)" />
    </include>

    <include if="$(eval arg('camera_id_2') != '')"
        file="$(find panel_visualization)/launch/aruco_detection.launch">
        <arg name="camera_name" default="/web_camera_$(arg camera_id_2)/webcam" />
        <arg name="aruco_size_override" default="$(arg aruco_size_override)" />
    </include>
    <include if="$(eval arg('camera_id_2') != '')"
        file="$(find panel_visualization)/launch/web_cameras.launch">
        <arg name="camera_id" default="$(arg camera_id_2)" />
    </include>

    <include if="$(eval arg('camera_id_3') != '')"
        file="$(find panel_visualization)/launch/aruco_detection.launch">
        <arg name="camera_name" default="/web_camera_$(arg camera_id_3)/webcam" />
        <arg name="aruco_size_override" default="$(arg aruco_size_override)" />
    </include>
    <include if="$(eval arg('camera_id_3') != '')"
        file="$(find panel_visualization)/launch/web_cameras.launch">
        <arg name="camera_id" default="$(arg camera_id_3)" />
    </include>

    <include if="$(eval arg('camera_id_4') != '')"
        file="$(find panel_visualization)/launch/aruco_detection.launch">
        <arg name="camera_name" default="/web_camera_$(arg camera_id_4)/webcam" />
        <arg name="aruco_size_override" default="$(arg aruco_size_override)" />
    </include>
    <include if="$(eval arg('camera_id_4') != '')"
        file="$(find panel_visualization)/launch/web_cameras.launch">
        <arg name="camera_id" default="$(arg camera_id_4)" />
    </include>

    <include if="$(eval arg('camera_id_5') != '')"
        file="$(find panel_visualization)/launch/aruco_detection.launch">
        <arg name="camera_name" default="/web_camera_$(arg camera_id_5)/webcam" />
        <arg name="aruco_size_override" default="$(arg aruco_size_override)" />
    </include>
    <include if="$(eval arg('camera_id_5') != '')"
        file="$(find panel_visualization)/launch/web_cameras.launch">
        <arg name="camera_id" default="$(arg camera_id_5)" />
    </include>

    <node name="panel_tracker" pkg="panel_visualization" type="panel_tracker.py"
        output="screen">
        <param name="base_frame" value="$(arg base_frame)" />
        <param name="cameras_ids"
            value="[$(arg camera_id_0), $(arg camera_id_1), $(arg camera_id_2), $(arg camera_id_3), $(arg camera_id_4), $(arg camera_id_5)]" />
        <param name="message_rate" value="$(arg message_rate)" /> <!-- for marker life time-->
        <param name="filter_size" value="$(arg filter_size)" /> <!-- number of images to average -->
        <param name="marker_length" value="$(arg aruco_size)" />
        <param name="marker_lengths_override" value="$(arg aruco_size_override)" />
        <rosparam file="$(find panel_visualization)/config/visual_objects.yaml" command="load" />
    </node>

    <node if="$(arg rviz)" name="rviz" pkg="rviz" type="rviz" output="screen"
        args="-d $(find panel_visualization)/rviz/test_config.rviz" />

    <!-- TEST fake stream from images -->
    <!-- <node if="$(arg test)" name="fake_camera" pkg="panel_visualization" type="fake_camera.py"
        output="screen">
        <param name="message_rate" value="$(arg message_rate)" />
        <param name="frame_id" value="$(arg fake_camera_frame)" />
        <param name="camera_name" value="$(arg camera_id_0)" />
    </node> -->

    <!-- <node if="$(eval arg('test') and not arg('gazebo'))" name="static_transform_publisher_0"
        pkg="tf2_ros"
        type="static_transform_publisher"
        args="0 0 0 0.5 -0.5 0.5 -0.5 $(arg base_frame) $(arg fake_camera_frame)" /> -->

    <node if="$(eval arg('test') and not arg('gazebo'))" name="static_transform_publisher_0"
        pkg="tf2_ros"
        type="static_transform_publisher"
        args="0 0 0 0.5 -0.5 0.5 -0.5 $(arg base_frame) webcam_$(arg camera_id_0)" />
</launch>